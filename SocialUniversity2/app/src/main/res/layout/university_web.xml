<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <WebView
            android:id="@+id/webView"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/universityWebLogo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="13dp" />

    <CheckBox
        android:id="@+id/cboxFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/starStyle"
        android:theme="@style/checkBoxStyle"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_alignTop="@+id/universityWebLogo"
        android:layout_toRightOf="@+id/universityWebLogo"
        android:layout_toEndOf="@+id/universityWebLogo"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takip"
        android:layout_alignTop="@+id/universityWebLogo"
        android:layout_alignRight="@+id/cboxFollow"
        android:layout_alignEnd="@+id/cboxFollow" />
</RelativeLayout>